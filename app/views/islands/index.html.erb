<p id="notice"><%= notice %></p>

<h1>Islands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Description</th>
      <th>Text</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @islands.each do |island| %>
      <tr>
        <td><%= island.name %></td>
        <td><%= island.user_id %></td>
        <td><%= island.description %></td>
        <td><%= island.text %></td>
        <td><%= island.icon %></td>
        <td><%= link_to 'Show', island %></td>
        <td><%= link_to 'Edit', edit_island_path(island) %></td>
        <td><%= link_to 'Destroy', island, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

