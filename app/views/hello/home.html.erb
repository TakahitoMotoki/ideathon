<section class="timeline">
  <div class="left-content">
    <% @buildings.each do |building| %>
      <div class="bcard">
        <div class="bcard-top">
          <div class="bcard-icon debug-background2">
          </div>
          <div class="bcard-name">
            <p class="bcard-island">
              <b><%= link_to building.title, building %></b><br>
              <span class="bcard-address">Address: <%= link_to building.island.name, building.island %> / Takahito Motoki</span>
            </p>
          </div>
        </div>
        <p class="bcard-text">
          <%= building.description %>
        </p>
        <div class="bcard-image debug-background3">
        </div>
        <div class="bcard-button-container container">
          <div class="row">
            <div class="col-xs-4 btn">
              Wanna Do!
            </div>
            <div class="col-xs-4 btn">
              Like
            </div>
            <div class="col-xs-4 btn">
              Comment
            </div>
          </div>
          <div class="row">
            <div class="col-xs-4 counter">
              5
            </div>
            <div class="col-xs-4 counter">
              34
            </div>
            <div class="col-xs-4 counter">
              12
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="right-content">
  </div>
</section>
